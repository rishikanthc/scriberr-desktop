{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "scriberr-companion",
  "version": "0.1.0",
  "identifier": "com.rishi.scriberr-companion",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Scriberr Companion",
        "width": 340,
        "height": 480,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "resizable": false,
        "alwaysOnTop": true,
        "label": "main"
      },
      {
        "title": "Recordings",
        "width": 900,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "resizable": true,
        "alwaysOnTop": false,
        "label": "recordings",
        "url": "/"
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png"
    },
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "files": {
        "Info.plist": "Info.plist"
      }
    }
  }
}